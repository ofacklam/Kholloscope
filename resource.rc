        MENUITEM "&Interface", ID_KHOLLES_MANAGE
        MENUITEM "&Générer", ID_KHOLLES_GENERATE
        MENUITEM "&Historique", ID_KHOLLES_HISTORIC
    END
    POPUP "&Aide"
    BEGIN
        MENUITEM "&Débrouillez-vous !", ID_HELP
        MENUITEM "A p&ropos de", ID_ABOUT_IT
    END
END


