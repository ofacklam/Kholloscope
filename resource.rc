        MENUITEM "&Sélectionner", ID_FILE_SELECT
        MENUITEM "&Créer", ID_FILE_CREATE
        MENUITEM "&Supprimer", ID_FILE_DELETE
        MENUITEM "&Configurer", ID_FILE_CONFIGURATE
        MENUITEM "&Quitter", ID_FILE_EXIT
